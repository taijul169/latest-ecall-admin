{{>header}}

{{>nav}}
 {{#if message}}
    <div class="alert {{message.type}}" role="alert">
        {{message.message}}
    </div>
{{/if}}
<div class="page-wrapper" style="min-height: 349px;">
    <div class="content container-fluid">

        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-12 d-flex justify-content-end">
                    <div class="doc-badge me-3">Total Test <span class="ms-1">{{testlist.length}}</span></div>
                    <a href="#" class="btn btn-primary btn-add" data-bs-toggle="modal" data-bs-target="#addModal"><i
                            class="feather-plus-square me-1"></i> Add New</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header border-bottom-0">
                        <div class="row align-items-center">
                            <div class="col">
                                <h5 class="card-title">Test List</h5>
                            </div>
                            <div class="col-auto custom-list d-flex">
                                <div class="form-custom me-2">
                                    <div id="tableSearch" class="dataTables_wrapper">
                                        
                                    </div>
                                </div>
                                <div class="SortBy">
                                    <div class="selectBoxes order-by">
                                        <p class="mb-0"><img src="/assets/img/icon/sort.png" class="me-2" alt="icon">
                                            Order by </p>
                                        <span class="down-icon"><i class="feather-chevron-down"></i></span>
                                    </div>
                                    <div id="checkBox">
                                        <form action="pharmacy-list.html">
                                            <p class="lab-title">Order By </p>
                                            <label class="custom_radio w-100">
                                                <input type="radio" name="sort">
                                                <span class="checkmark"></span> ID
                                            </label>
                                            <label class="custom_radio w-100">
                                                <input type="radio" name="sort">
                                                <span class="checkmark"></span> Date Created
                                            </label>
                                            <p class="lab-title">Sort By</p>
                                            <label class="custom_radio w-100">
                                                <input type="radio" name="sort">
                                                <span class="checkmark"></span> Ascending
                                            </label>
                                            <label class="custom_radio w-100 mb-4">
                                                <input type="radio" name="sort">
                                                <span class="checkmark"></span> Descending
                                            </label>
                                            <button type="submit" class="btn w-100 btn-primary">Apply</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <div id="data-table_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                               
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table class="datatable table table-borderless hover-table dataTable no-footer"
                                            id="data-table" role="grid">
                                            <thead class="thead-light">
                                                <tr role="row">
                                                    <th class="sorting_asc" tabindex="0" aria-controls="data-table"
                                                        rowspan="1" colspan="1" aria-sort="ascending"
                                                        aria-label="ID: activate to sort column descending"
                                                        style="width: 47.2812px;">ID</th>
                                                    <th class="sorting" tabindex="0" aria-controls="data-table"
                                                        rowspan="1" colspan="1"
                                                        aria-label="Pharmacy Name: activate to sort column ascending"
                                                        style="width: 267.594px;">Test Name</th>
                                                    <th class="sorting" tabindex="0" aria-controls="data-table"
                                                        rowspan="1" colspan="1"
                                                        aria-label="Categories: activate to sort column ascending"
                                                        style="width: 190.688px;">Categories</th>
                                                    <th class="sorting" tabindex="0" aria-controls="data-table"
                                                        rowspan="1" colspan="1"
                                                        aria-label="Pharmacy Address: activate to sort column ascending"
                                                        style="width: 354.453px;">Price</th>
                                                    <th class="sorting" tabindex="0" aria-controls="data-table"
                                                        rowspan="1" colspan="1"
                                                        aria-label="Phone number: activate to sort column ascending"
                                                        style="width: 139.984px;">Active Status</th>
                                                    <th class="sorting" tabindex="0" aria-controls="data-table"
                                                        rowspan="1" colspan="1"
                                                        aria-label=": activate to sort column ascending"
                                                        style="width: 184.266px;">Action</th>
                                                        
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each testlist}}
                                                {{!-- single hospital/lab --}}
                                                    <tr role="row" class="odd">
                                                        <td class="sorting_1">#{{this.ServiceID}}</td>
                                                        <td>
                                                            <h2 class="table-avatar">
                                                               
                                                                <a href="#"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#editModal"
                                                                    data-name="{{this.serviceName}}"
                                                                    data-serviceid={{this.ServiceID}}
                                                                    data-price={{this.Price}}
                                                                    data-category={{this.Category}}
                                                                    class="singlehospital" >{{this.serviceName}}</a>
                                                            </h2>
                                                        </td>
                                                        <td>{{this.Category}} </td>
                                                        <td>{{this.Price }}TK</td>
                                                        
                                                        <td><label class="toggle-switch" for="status1{{@index}}">
                                                            <input type="checkbox" class="toggle-switch-input" id="status1{{@index}}">
                                                            <span class="toggle-switch-label">
                                                                <span class="toggle-switch-indicator"></span>
                                                            </span>
                                                        </label></td>
                                                        <td class="text-end">
                                                            <div class="actions">
                                                               
                                                                <a href="#"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#editModal"
                                                                    data-name="{{this.serviceName}}"
                                                                    data-serviceid={{this.ServiceID}}
                                                                    data-price={{this.Price}}
                                                                    data-category={{this.Category}}
                                                                    class="singlehospital" >Edit</a>
                                                                <a class="text-danger" href="#" data-bs-toggle="modal"
                                                                    data-bs-target="#deleteModal">
                                                                    <i class="feather-trash-2 me-1"></i> Delete
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                               {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-5"></div>
                                    <div class="col-sm-12 col-md-7"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="tablepagination" class="dataTables_wrapper">
                 
                </div>
            </div>
        </div>

    </div>
</div>


    <div class="modal fade contentmodal" id="addModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content doctor-profile">
                <div class="modal-header">
                    <h3 class="mb-0">Add Test</h3>
                    <button type="button" class="close-btn" data-bs-dismiss="modal" aria-label="Close"><i
                            class="feather-x-circle"></i></button>
                </div>
                <div class="modal-body">
                    <form id="myFormInsert" >
                        <div class="add-wrap">
                            <div class="form-group form-focus">
                                <input required type="text" id="addName" class="form-control floating">
                                <label class="focus-label">Test Name<span class="text-danger">*</span></label>
                            </div>
                            <div class="form-group">
                                <select required class="select select2-hidden-accessible" id="addCategory" data-select2-id="1" tabindex="-1"
                                    aria-hidden="true">
                                    <option >Select Category*</option>
                                    <option>Pathology</option>
                                    <option>Cardiology</option>
                                </select>
                            </div>
                            <div class="form-group form-focus">
                                <input required type="text" id="addPrice" class="form-control floating">
                                <label class="focus-label">Test Price<span class="text-danger">*</span></label>
                            </div>
                            <div class="submit-section">
                                <input type="submit" class="btn btn-primary btn-save" value="Insert" onclick="TestInsert()">
                                {{!-- <button type="submit" onclick="HospitalInsert()" class="btn btn-primary btn-save">Save Changes</button> --}}
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade contentmodal" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content doctor-profile">
                <div class="modal-header">
                    <h3 class="mb-0">Edit Test</h3>
                    <button type="button" class="close-btn" data-bs-dismiss="modal" aria-label="Close"><i
                            class="feather-x-circle"></i></button>
                </div>
                <div class="modal-body lab-modal-body">
                   
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade contentmodal" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content doctor-profile">
                <div class="modal-header border-bottom-0 justify-content-end">
                    <button type="button" class="close-btn" data-bs-dismiss="modal" aria-label="Close"><i
                            class="feather-x-circle"></i></button>
                </div>
                <div class="modal-body">
                    <div class="delete-wrap text-center">
                        <form action="patient-list.html">
                            <div class="del-icon"><i class="feather-x-circle"></i></div>
                            <h2>Sure you Want to delete</h2>
                            <p>“Patient”</p>
                            <div class="submit-section">
                                <button type="submit" class="btn btn-success me-2">Yes</button>
                                <a href="#" class="btn btn-danger" data-bs-dismiss="modal">No</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="/assets/js/testlist.js"></script>
{{>footer}}


